---
import { projects } from "../data/projects.js";
---

<section id="projects" class="projects reveal">
  <div class="container">
    <div class="section-header">
      <span class="section-tag mono">// portfÃ³lio</span>
      <h2 class="section-title">Projetos em Destaque</h2>
      <p class="section-description">
        Alguns dos projetos que desenvolvi recentemente
      </p>
    </div>

    <div class="projects-grid reveal-stagger">
      {projects.map((project) => (
        <article class="project-card">
          <div class="project-image">
            {project.emoji || "ðŸ’»"}
          </div>
          
          <div class="project-content">
            <h3 class="project-title">{project.title}</h3>
            
            <p class="project-description">
              {project.description}
            </p>
            
            <div class="project-tags">
              {project.tags.map((tag) => (
                <span>{tag}</span>
              ))}
            </div>
            
            <div class="project-links">
              {project.link && (
                <a href={project.link} target="_blank" rel="noopener" class="project-link">
                  Ver Projeto
                  <svg width="16" height="16" viewBox="0 0 16 16" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M6 3h7v7M13 3L3 13"/>
                  </svg>
                </a>
              )}
              {project.github && (
                <a href={project.github} target="_blank" rel="noopener" class="project-link">
                  GitHub
                  <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
