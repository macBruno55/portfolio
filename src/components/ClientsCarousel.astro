---
// Importar diretamente os logos
import { clientLogos } from "../data/clientLogos.js";
---

<section class="clients-carousel reveal">
  <div class="container">
    <div class="section-header">
      <span class="section-tag mono">// Customer and Partners</span>
      <h2 class="section-title">Companies I've Worked With  </h2>
      <p class="section-description">
          My client portfolio includes companies such as
      </p>
    </div>

    <div class="carousel-wrapper">
      <div class="carousel-track">
        {clientLogos.map((logo) => (
          <div class="logo-item">
            <img 
              src={logo.src} 
              alt={logo.name}
              title={logo.name}
              loading="lazy"
            />
          </div>
        ))}
        <!-- Duplicar os logos para efeito infinito -->
        {clientLogos.map((logo) => (
          <div class="logo-item">
            <img 
              src={logo.src} 
              alt={logo.name}
              title={logo.name}
              loading="lazy"
            />
          </div>
        ))}
      </div>
    </div>
    
    <p class="clients-count">
      <strong>{clientLogos.length}</strong> My client portfolio includes companies such as
    </p>
  </div>
</section>

<style>
  .clients-carousel {
    padding: var(--section-padding) 0;
    position: relative;
    z-index: 1;
    overflow: hidden;
  }

  .carousel-wrapper {
    position: relative;
    width: 100%;
    overflow: hidden;
    margin: 3rem 0;
    padding: 2rem 0;
    
    /* Gradient masks nas bordas */
    mask-image: linear-gradient(
      to right,
      transparent,
      black 10%,
      black 90%,
      transparent
    );
    -webkit-mask-image: linear-gradient(
      to right,
      transparent,
      black 10%,
      black 90%,
      transparent
    );
  }

  .carousel-track {
    display: flex;
    gap: 4rem;
    animation: scroll 40s linear infinite;
    width: fit-content;
  }

  .carousel-track:hover {
    animation-play-state: paused;
  }

