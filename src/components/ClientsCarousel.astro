  .logo-item {
    flex-shrink: 0;
    width: 140px;
    height: 80px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--bg-secondary);
    border: 1px solid var(--border-color);
    border-radius: 12px;
    padding: 1.5rem;
    transition: var(--transition-smooth);
    cursor: pointer;
  }

  .logo-item:hover {
    border-color: var(--accent-primary);
    transform: translateY(-5px);
    box-shadow: 0 8px 25px rgba(59, 130, 246, 0.2);
  }

  .logo-item img {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
    filter: grayscale(100%) opacity(0.7);
    transition: var(--transition-smooth);
  }

  .logo-item:hover img {
    filter: grayscale(0%) opacity(1);
  }

  .clients-count {
    text-align: center;
    color: var(--text-secondary);
    font-size: 1rem;
    margin-top: 2rem;
  }

  .clients-count strong {
    color: var(--accent-primary);
    font-size: 1.5rem;
    font-weight: 700;
  }

  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(calc(-140px * 17 - 4rem * 17));
    }
  }

  @media (max-width: 768px) {
    .carousel-track {
      gap: 2rem;
    }
    
    .logo-item {
      width: 100px;
      height: 60px;
      padding: 1rem;
    }

    @keyframes scroll {
      0% {
        transform: translateX(0);
      }
      100% {
        transform: translateX(calc(-100px * 17 - 2rem * 17));
      }
    }
  }
