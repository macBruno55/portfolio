---
import { experience } from "../data/experience-timeline.js";
---

<section id="experience" class="experience-timeline reveal">
  <div class="container">
    <div class="section-header">
      <span class="section-tag mono">// professional background</span>
      <h2 class="section-title">Experiências Profissionais</h2>
    </div>

    <div class="timeline">
      {experience.map((item, index) => (
        <article class="timeline-item" data-index={index}>
          {/* Dot circle on the timeline */}
          <div class="timeline-dot">
            <div class="dot-inner">
              {item.icon && <span class="dot-icon">{item.icon}</span>}
            </div>
          </div>
          
          <div class="timeline-content">
            {/* Header with title and period */}
            <div class="timeline-header">
              <div class="timeline-left">
                <h3 class="timeline-role">{item.role}</h3>
                <p class="timeline-company">{item.company}</p>
              </div>
              
              <div class="timeline-right">
                <span class="timeline-period">{item.period}</span>
                {item.duration && (
                  <span class="timeline-duration">{item.duration}</span>
                )}
              </div>
            </div>

            {/* Achievements list (bullet points) */}
            {item.achievements && item.achievements.length > 0 && (
              <ul class="timeline-achievements">
                {item.achievements.map((achievement) => (
                  <li>{achievement}</li>
                ))}
              </ul>
            )}

            {/* Technologies badges */}
            {item.technologies && item.technologies.length > 0 && (
              <div class="timeline-technologies">
                {item.technologies.map((tech) => (
                  <span class="tech-badge">{tech}</span>
                ))}
              </div>
            )}
          </div>
        </article>
      ))}
    </div>
  </div>
</section>

<style>
  .experience-timeline {
    padding: var(--section-padding) 0;
    position: relative;
    z-index: 1;
  }

  .timeline {
    position: relative;
    max-width: 1000px;
    margin: 4rem auto 0;
    padding-left: 0;
  }

  /* Vertical line */
  .timeline::before {
    content: '';
    position: absolute;
    left: 21px;
    top: 30px;
    bottom: 30px;
    width: 2px;
    background: linear-gradient(
      to bottom,
      var(--accent-primary),
      var(--accent-secondary)
    );
    opacity: 0.4;
  }

  .timeline-item {
    position: relative;
    padding-left: 80px;
    margin-bottom: 5rem;
    opacity: 0;
    transform: translateX(-30px);
    transition: opacity 0.6s ease, transform 0.6s ease;
  }

  .timeline-item.visible {
    opacity: 1;
    transform: translateX(0);
  }

  /* Animated entrance with delay */
  .timeline-item:nth-child(1).visible { transition-delay: 0.1s; }
  .timeline-item:nth-child(2).visible { transition-delay: 0.2s; }
  .timeline-item:nth-child(3).visible { transition-delay: 0.3s; }
  .timeline-item:nth-child(4).visible { transition-delay: 0.4s; }

  /* Circle dot on timeline */
  .timeline-dot {
    position: absolute;
    left: 0;
    top: 8px;
    width: 44px;
    height: 44px;
    background: var(--bg-primary);
    border: 3px solid var(--accent-primary);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 2;
    transition: var(--transition-smooth);
  }

  .timeline-item:hover .timeline-dot {
    transform: scale(1.15);
    box-shadow: 0 0 20px rgba(59, 130, 246, 0.6);
  }

  .dot-inner {
    width: 20px;
    height: 20px;
    background: var(--accent-gradient);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.7rem;
  }

  .dot-icon {
    color: white;
    font-weight: bold;
  }

  /* Content card */
  .timeline-content {
    background: var(--bg-secondary);
    border: 1px solid var(--border-color);
    border-radius: 16px;
    padding: 2rem;
    transition: var(--transition-smooth);
    position: relative;
  }

  .timeline-content::before {
    content: '';
    position: absolute;
    left: -12px;
    top: 18px;
    width: 0;
    height: 0;
    border-top: 10px solid transparent;
    border-bottom: 10px solid transparent;
    border-right: 12px solid var(--border-color);
  }

  .timeline-content::after {
    content: '';
    position: absolute;
    left: -10px;
    top: 19px;
    width: 0;
    height: 0;
    border-top: 9px solid transparent;
    border-bottom: 9px solid transparent;
    border-right: 11px solid var(--bg-secondary);
  }

  .timeline-item:hover .timeline-content {
    border-color: rgba(59, 130, 246, 0.4);
    transform: translateX(5px);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.3);
  }

  /* Header section */
  .timeline-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 1.5rem;
    gap: 2rem;
  }

  .timeline-left {
    flex: 1;
  }

  .timeline-role {
    font-size: 1.4rem;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 0.5rem;
    line-height: 1.3;
  }

  .timeline-company {
    color: var(--text-secondary);
    font-size: 1rem;
    margin: 0;
  }

  .timeline-right {
    text-align: right;
    flex-shrink: 0;
  }

  .timeline-period {
    display: block;
    font-size: 0.95rem;
    color: var(--text-primary);
    font-weight: 500;
    margin-bottom: 0.3rem;
  }

  .timeline-duration {
    display: block;
    font-size: 0.85rem;
    color: var(--text-tertiary);
  }

  /* Achievements list */
  .timeline-achievements {
    list-style: none;
    margin: 0 0 1.5rem 0;
    padding: 0;
  }

  .timeline-achievements li {
    position: relative;
    padding-left: 1.5rem;
    margin-bottom: 1rem;
    color: var(--text-secondary);
    line-height: 1.7;
    font-size: 0.95rem;
  }

  .timeline-achievements li::before {
    content: '•';
    position: absolute;
    left: 0;
    color: var(--accent-primary);
    font-weight: bold;
    font-size: 1.2rem;
  }

  /* Technologies badges */
  .timeline-technologies {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tech-badge {
    font-size: 0.8rem;
    padding: 0.4rem 0.9rem;
    background: rgba(255, 120, 60, 0.15);
    color: #ff783c;
    border-radius: 6px;
    border: 1px solid rgba(255, 120, 60, 0.3);
    font-family: var(--font-mono);
    font-weight: 500;
    transition: var(--transition-smooth);
  }

  .tech-badge:hover {
    background: rgba(255, 120, 60, 0.25);
    transform: translateY(-2px);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .timeline {
      padding-left: 0;
    }

    .timeline::before {
      left: 18px;
    }

    .timeline-item {
      padding-left: 60px;
      margin-bottom: 3rem;
    }

    .timeline-dot {
      width: 36px;
      height: 36px;
      left: 0;
    }

    .dot-inner {
      width: 16px;
      height: 16px;
    }

    .timeline-header {
      flex-direction: column;
      gap: 1rem;
    }

    .timeline-right {
      text-align: left;
    }

    .timeline-role {
      font-size: 1.2rem;
    }

    .timeline-content {
      padding: 1.5rem;
    }

    .timeline-achievements li {
      font-size: 0.9rem;
    }
  }

  /* Collapse/Expand button (optional) */
  .timeline-toggle {
    display: none; /* Can be implemented if needed */
  }
</style>

<script>
  // Add visible class when scrolling into view
  document.addEventListener('DOMContentLoaded', () => {
    const timelineItems = document.querySelectorAll('.timeline-item');
    
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.classList.add('visible');
          }
        });
      },
      { threshold: 0.2, rootMargin: '0px 0px -50px 0px' }
    );

    timelineItems.forEach((item) => observer.observe(item));
  });
</script>
